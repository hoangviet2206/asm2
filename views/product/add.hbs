<div class="container text-center card bg-light col-md-6">
   <form action="/product/add" method="post">
      <h1 class="alert alert-warning text-uppercase">Add new product</h1>
      <div class="form-group mt-3">
         <label class="text text-danger fw-bold">Product Title</label>
         <input class="form-control" type="text" placeholder="Enter book title" name="title" required minlength="5">
      </div>
      <div class="form-group mt-3">
         <label class="text text-danger fw-bold">Product Company</label>
         <select class="form-control" name="company">
            <option value="Acer">Acer</option>
            <option value="LG">LG</option>
            <option value="Dell">Dell</option>
            <option value="Samsung">Samsung</option>
         </select>
      </div>
      <div class="form-group mt-3">
         <label class="text text-danger fw-bold">Product Price</label>
         <input class="form-control" type="number" name="price" placeholder="Enter product price">
      </div>
      <div class="form-group mt-3">
         <label class="text text-danger fw-bold">Product Cover</label>
         <input class="form-control" type="url" name="cover" placeholder="Enter product cover url" required>
      </div>
      <div class="form-group mt-3 mb-3">
         <input class="btn btn-success" type="submit" value="Add">
      </div>
   </form>
</div>