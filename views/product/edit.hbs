<div class="container text-center card bg-light col-md-6">
   <form action="/product/edit/{{ products._id }}" method="post">
      <h1 class="alert alert-warning text-uppercase">Edit Product</h1>
      <div class="form-group mt-3">
         <label class="text text-danger fw-bold">Product Title</label>
         <input class="form-control" type="text" placeholder="Enter product title" name="title" required minlength="5" value="{{ products.title }}">
      </div>
      <div class="form-group mt-3">
         <label class="text text-danger fw-bold">Product Company</label>
          <select class="form-control" name="company"name="company" required value="{{ products.company }}">
             <option value="LeGO">Lego</option>
            <option value="Mô hình">Mo hinh</option>
            <option value="KID">Kidd</option>
            <option value="bearbrick">bearbrick</option>
            
      </div>
       
         </select>  
      <div class="form-group mt-3">
         <label class="text text-danger fw-bold">Product Price</label>
         <input class="form-control" type="number" name="price" placeholder="Enter product price" value="{{ products.price }}" min="0">
      </div>
      <div class="form-group mt-3">
         <label class="text text-danger fw-bold">Product Cover</label><br>
         <img src="{{ products.cover }}" width="100" height="120"><br>
         <input class="form-control" type="url" name="cover" placeholder="Enter product cover url" required value="{{ products.cover}}">
      </div>
      
      <div class="form-group mt-3 mb-3">
         <input class="btn btn-success" type="submit" value="Edit">
      </div>
   </form>
</div>